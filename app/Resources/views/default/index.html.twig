{% extends 'base.html.twig' %}


{% block post %}
    <div class="center_card mb-2">
        <img class="card-img-top img-responsive" src="img/creative-marketing-ideas-header.png" alt="Card image cap">
        <div class="card-body d-flex align-items-center flex-column">
            <h4 class="card-title text-capitalize text-dark">Card title</h4>
            <div class="text-muted d-flex flex-row text-capitalize">
                <h6>2 days ago</h6><span>/</span><h6>by Jhon Doe</h6>
            </div>
            <div>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
        <div class="card-footer text-muted d-flex justify-content-between">
            <div class="card_img">
                <img class="rounded-circle" src="img/pic.jpg" alt="idea_logo">
            </div>
            <div class="d-flex flex-row align-items-baseline">
                <i class="fas fa-heart mx-1" ></i><h6>9</h6>
                <i class="far fa-comment-alt mx-1"></i><h6>9</h6>
            </div>
        </div>
    </div>

{% endblock %}
